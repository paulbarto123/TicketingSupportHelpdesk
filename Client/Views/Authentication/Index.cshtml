<div class="modal fade" id="Login" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="roleform" action="Auth/Login">
                    <div class="form-group">
                        <label for="email" class="col-form-label">Email</label>
                        <input type="text" class="form-control" id="emaillogin" name="emaillogin">
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-form-label">Password</label>
                        <input type="text" class="form-control" id="passwordlogin" name="passwordlogin">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Login()">Submit</button>
            </div>
        </div>
    </div>
</div>


<script>
    function Submit() {
        var User = new Object();
        User.Nik = $("#nik").val();
        User.Firstname = $("#firstname").val();
        User.Lastname = $("#lastname").val();
        User.BirthDate = $("#birthdate").val();
        User.Gender = $("#gender").val();
        User.MarriedStatus = $("#marriedstatus").val();
        User.Position = $("#position").val();
        User.Address = $("#address").val();
        User.Quota = $("#quota").val();
        User.PhoneNumber = $("#phonenumber").val();
        User.Email = $("#email").val();
        @*User.UserId = $("#userid").val();*@
        $.ajax({
            type: 'post',
            url: '/authentication/register',
            data: User
        }).done((result) => {
            console.log(result);
            if (result == 200) {
                alert("Successed to Add Data!");
            }
        }).fail((result) => {
            console.log(result);
            alert("Failed to Add Data!");
        })
    }

    function Login() {
        var Login = new Object();
        Login.Email = $("#emaillogin").val();
        Login.Password = $("#passwordlogin").val();
        console.log(Login);
        $.ajax({
            type: 'post',
            url: '/authentication/login',
            data: Login
        }).done((result) => {
            console.log(result);
            if (result == 200) {
                alert("Successed to Login");
                window.location.href = "https://localhost:44346/login";
            }
            else {
                alert("Failed to Login");
                window.location.href = "https://localhost:44346/login";
            }
        }).fail((result) => {
            console.log(result);
            if (result != 200) {
                alert("Failed to Login");
                window.location.href = "https://localhost:44346/login";
            }
        })
    }

    function ForgotPassword() {
        var User = new Object();
        User.Email = $("#emailforgot").val();
        $.ajax({
            type: 'PUT',
            url: '/authentication/ForgotPassword',
            data: User
        }).done((result) => {
            if (result == 200) {
                alert("Check Your Email for New Password!");
            }
        }).fail((result) => {
            console.log(result);
            alert("Failed to Send Email!");
        })
    }

    function ChangePassword() {
        var Account = new Object();
        Account.NIK = $("#NIK").val();
        Account.NewPassword = $("#newpassword").val();
        Account.OldPassword = $("#oldpassword").val();
        Account.ConfirmPassword = $("#confirmpassword").val();
        $.ajax({
            type: 'PUT',
            url: '/authentication/ChangePassword',
            data: Account
        }).done((result) => {
            if (result == 200) {
                alert("Your Password has been Changed!");
            }
        }).fail((result) => {
            console.log(result);
            alert("Can Not Change Your Password");
        })
    }
</script>